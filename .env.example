# Database Configuration
DATABASE_PATH=./fantasy_football.db

# Server Configuration
PORT=3000
HTTPS_PORT=8443
NODE_ENV=development

# SSL Certificate Configuration (optional)
# SSL_CERT=./certs/cert.pem
# SSL_KEY=./certs/key.pem

# Authentication Configuration
# Generate with: node server/auth/generateHash.js
ADMIN_PASSWORD_HASH=your_bcrypt_hash_here
SESSION_SECRET=your_random_session_secret_here

# Tank01 NFL API Configuration
# Get your API key from: https://rapidapi.com/tank01/api/tank01-nfl-live-in-game-real-time-statistics-nfl
TANK01_API_KEY=your_tank01_api_key_here

# Scoring Configuration (optional - defaults are in database)
PPR_BONUS=1.0
PASSING_TD_POINTS=4
RUSHING_TD_POINTS=6
RECEIVING_TD_POINTS=6